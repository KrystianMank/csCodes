@{
	ViewData["Title"] = "Add/Edit User";
}
@using ReservationSystem_WebApp.Data
@model ReservationSystem_WebApp.ViewModels.UserViewModel

<h2>Add / Edit User</h2>
<form asp-controller="Account" asp-action="AddEditUserSubmit" method="post">
	<div asp-validation-summary="All"></div>
	<input type="hidden" asp-for="Id" value="@(Model.Id == null ? null : Model.Id)"/>

	<div class="form-group mt-4">
		<label asp-for="Email">Email</label>
		<input type="email" asp-for="Email" class="form-control" />
		<span asp-validation-for="Email"></span>
	</div>

	<div class="form-group mt-4">
		<label asp-for="Password">Password</label>
		<input type="password" asp-for="Password" class="form-control" />
		<span asp-validation-for="Password"></span>
	</div>

	<div class="form-group mt-4">
		<label asp-for="AccessType">AccessType</label>
		<select asp-for="AccessType" class="form-control">
			<option value="@ApplicationData.AccessType.Admin">Admin</option>
			<option value="@ApplicationData.AccessType.Worker">Worker</option>
			<option value="@ApplicationData.AccessType.Client" selected>Client</option>
		</select>
		<span asp-validation-for="AccessType"></span>
	</div>

	<button type="submit" class="btn btn-primary">OK</button>
</form>