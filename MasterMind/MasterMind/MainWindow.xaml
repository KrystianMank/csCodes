<Window x:Class="MasterMind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterMind"
        mc:Ignorable="d"
        Title="Mastermind" Height="800" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Vertical">
                <Menu VerticalAlignment="Top">
                    <MenuItem Header="Gra">
                        <MenuItem Header="_Nowa gra" x:Name="nowaGraMenuItem" Click="nowaGraMenuItem_Click"/>
                        <Separator/>
                        <MenuItem Header="_Zakończ" x:Name="zakonczMenuItem" Click="zakonczMenuItem_Click"/>
                    </MenuItem>
                    <MenuItem Header="Pomoc">
                        <MenuItem Header="Zasady gry" x:Name="zasadyGryMenuItem" Click="zasadyGryMenuItem_Click"/>
                        <MenuItem Header="O programie" x:Name="oProgramieMenuItem" Click="oProgramieMenuItem_Click"/>
                    </MenuItem>
                </Menu>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Button x:Name="btnSprawdz" Content="Sprawdź" Click="btnSprawdz_Click"/>
                <ScrollViewer Margin="5" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="MainPanel" Margin="5">
                        
                    </StackPanel>

                </ScrollViewer>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
