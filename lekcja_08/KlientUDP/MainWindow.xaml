<Window x:Class="KlientUDP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KlientUDP"
        mc:Ignorable="d"
        Title="Klient UDP" Height="450" Width="800">
    <Grid>
        <TextBox Name="MessageTextBox" Width="300" Height="30" VerticalAlignment="Top" Margin="10"/>
        <Button Content="Wyślij wiadomość" Width="120" Height="30" VerticalAlignment="Top" Margin="10, 50, 0, 0" Click="SendMessageButton_Click"/>
        <TextBlock Name="ResponseTextBlock" Height="300" VerticalAlignment="Top" Margin="84,100,84,0" TextWrapping="Wrap" />
    </Grid>
</Window>
