<UserControl x:Class="FinanceManager.TranactionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinanceManager"
             xmlns:vm="clr-namespace:TransactionModel"
             d:DataContext="{d:DesignInstance vm:TransactionViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800" Background="White">
    <UserControl.DataContext>
        <vm:TransactionViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Dodaj przychód lub wydatek" HorizontalAlignment="Center" FontSize="25" Height="auto" Width="auto"/>
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="75"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            
            <GroupBox Header="Typ transakcji: " Grid.Row="0" Grid.Column="0">
                <ComboBox x:Name="tranasctionTypeComboBox" VerticalAlignment="Top" Margin="10" HorizontalAlignment="Left" Width="auto" SelectedIndex="0"
                          SelectionChanged="tranasctionTypeComboBox_SelectionChanged">
                    <ComboBoxItem Content="Przychód"/>
                    <ComboBoxItem Content="Wydatek"/>
                </ComboBox>
            </GroupBox>
            <GroupBox Header="Źródło: " Grid.Row="0" Grid.Column="1">
                <ComboBox VerticalAlignment="Top" Margin="10" HorizontalAlignment="Left" Width="auto" SelectedIndex="0"
                          x:Name="transactionSourceComboBox" SelectionChanged="transactionSourceComboBox_SelectionChanged">
                    <ComboBoxItem Content="Karta"/>
                    <ComboBoxItem Content="Gotówka"/>
                </ComboBox>
            </GroupBox>

            <GroupBox Header="Data"  Grid.Row="1" Grid.Column="0">
                <Grid Margin="10">
                    <CheckBox Content="Dzisiejsza data" x:Name="todaysDateCheckBox" />
                    <DatePicker Margin="0, 25 ,0 0" x:Name="dateDatePicker"/>
                </Grid>
            </GroupBox>

            <GroupBox Header="Opis" Grid.Row="1" Grid.Column="1">
                <Grid Margin="10">
                    <TextBox x:Name="descriptionTextBox"/>
                </Grid>
            </GroupBox>

            <GroupBox Header="Kwota"  Grid.Row="2" Grid.Column="0">
                <Grid Margin="10">
                    <TextBox x:Name="amountTextBox"/>
                </Grid>
            </GroupBox>

            <GroupBox Header="Tytuł"  Grid.Row="2" Grid.Column="1">
                <Grid Margin="10">
                    <TextBox x:Name="titleTextBox"/>
                </Grid>
            </GroupBox>
        </Grid>
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" >
            <Button Content="Dodaj" Margin="10" FontSize="25" Padding="10" x:Name="addTranasctionButton" Click="addTranasctionButton_Click"/>
            <Button Content="Reset formularza" x:Name="formResetButton" Click="formResetButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
